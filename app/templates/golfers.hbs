<div class="top-header">
	<h2 class="header-title" id="title">Old Dudes Golf</h2>
	<p>Tracking the saddest bunch of golfers in SoCal.</p>

	{{input placeholder="Filter golfers"}}

</div>

<div class="container">
	<table class="table golfer-table">
		<thead>
			<tr>
				<th width="60%">GOLFER</th>
				<th width="20%">HANDICAP</th>
				<th width="20%">UPDATED</th>
			</tr>
		</thead>
		<tbody>
			{{#each golfer in model}}
				<tr>
					<td class="name">{{golfer.name}}</td>
					<td class="handicap">{{golfer.handicap}}</td>
					<td class="updated">{{golfer.updated}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>

{{outlet}}
